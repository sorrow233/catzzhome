# Avoid caching Service Worker and HTML
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
/catzz-sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# Common JS/CSS (Short TTL to allow updates while we develop)
/*.js
  Cache-Control: public, max-age=60
/*.css
  Cache-Control: public, max-age=60

# Wallpapers and assets (Immutable)
/wallpapers/*
  Cache-Control: public, max-age=31536000, immutable
/*.png
  Cache-Control: public, max-age=31536000, immutable
/*.jpg
  Cache-Control: public, max-age=31536000, immutable
/*.svg
  Cache-Control: public, max-age=31536000, immutable
